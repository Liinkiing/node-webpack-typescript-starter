{
  "name": "node-webpack-typescript-starter",
  "version": "1.0.0",
  "description": "A simple Webpack starter to starts writing Node applications with Typescript",
  "main": "src/index.ts",
  "repository": "https://github.com/Liinkiing/node-webpack-typescript-starter",
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "license": "MIT",
  "keywords": [
    "webpack",
    "typescript",
    "template",
    "starter",
    "boilerplate",
    "node"
  ],
  "scripts": {
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production node -r dotenv-flow/config build/index.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "webpack --colors",
    "build:watch": "webpack --colors --watch"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv-flow": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/express": "^4.17.6",
    "@types/webpack": "^4.41.11",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-loader": "^8.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "2.0.4",
    "ts-loader": "^7.0.0",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
