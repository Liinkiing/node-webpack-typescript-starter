{
  "name": "node-webpack-typescript-starter",
  "version": "1.0.0",
  "description": "A simple Webpack starter to starts writing Node applications with Typescript",
  "main": "src/index.ts",
  "repository": "https://github.com/Liinkiing/node-webpack-typescript-starter",
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "license": "MIT",
  "keywords": [
    "webpack",
    "typescript",
    "template",
    "starter",
    "boilerplate",
    "node"
  ],
  "scripts": {
    "prestart": "yarn build",
    "start": "node -r dotenv/config build/index.js",
    "dev": "nodemon",
    "build": "webpack --colors",
    "build:watch": "webpack --colors --watch"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@types/express": "^4.17.2",
    "@types/webpack": "^4.41.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.0",
    "prettier": "1.19.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
